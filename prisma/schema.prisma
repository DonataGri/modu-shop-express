generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum StoreRole {
  OWNER
  STAFF
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userStores UserStore[]
}

model Store {
  id          String   @id @default(uuid())
  name        String   @unique
  description String   @unique
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  userStores UserStore[]
  product    Product[]
}

model UserStore {
  id      String    @id @default(uuid())
  userId  String
  storeId String
  role    StoreRole

  user  User  @relation(fields: [userId], references: [id])
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([userId, storeId])
}

model Product {
  id          String   @id @default(uuid())
  storeId     String
  name        String
  description String?
  price       Float
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

model Variant {
  id        String @id @default(uuid())
  productId String
  sku       String @unique
  stock     Int    @default(0)
  price     Float?
}
